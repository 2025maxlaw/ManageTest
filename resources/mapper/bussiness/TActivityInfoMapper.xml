<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.bussiness.mapper.TActivityInfoMapper">
    
    <resultMap type="TActivityInfo" id="TActivityInfoResult">
        <result property="id"    column="id"    />
        <result property="menuId"    column="menu_id"    />
        <result property="name"    column="name"    />
        <result property="logo"    column="logo"    />
        <result property="content"    column="content"    />
        <result property="description"    column="description"    />
        <result property="lang"    column="lang"    />
        <result property="sorted"    column="sorted"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTActivityInfoVo">
        select id, menu_id, name, logo, content, description, lang, sorted, status, create_by, update_by, create_time, update_time, remark from t_activity_info
    </sql>

    <select id="selectTActivityInfoList" parameterType="TActivityInfo" resultMap="TActivityInfoResult">
        <include refid="selectTActivityInfoVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="menuId != null "> and menu_id = #{menuId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="logo != null  and logo != ''"> and logo = #{logo}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="lang != null  and lang != ''"> and lang = #{lang}</if>
            <if test="sorted != null "> and sorted = #{sorted}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by = #{updateBy}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
            <if test="updateTime != null "> and update_time = #{updateTime}</if>
        </where>
    </select>
    
    <select id="selectTActivityInfoById" parameterType="Long" resultMap="TActivityInfoResult">
        <include refid="selectTActivityInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTActivityInfo" parameterType="TActivityInfo" useGeneratedKeys="true" keyProperty="id">
        insert into t_activity_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="menuId != null">menu_id,</if>
            <if test="name != null">name,</if>
            <if test="logo != null">logo,</if>
            <if test="content != null">content,</if>
            <if test="description != null">description,</if>
            <if test="lang != null">lang,</if>
            <if test="sorted != null">sorted,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="menuId != null">#{menuId},</if>
            <if test="name != null">#{name},</if>
            <if test="logo != null">#{logo},</if>
            <if test="content != null">#{content},</if>
            <if test="description != null">#{description},</if>
            <if test="lang != null">#{lang},</if>
            <if test="sorted != null">#{sorted},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTActivityInfo" parameterType="TActivityInfo">
        update t_activity_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="menuId != null">menu_id = #{menuId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="content != null">content = #{content},</if>
            <if test="description != null">description = #{description},</if>
            <if test="lang != null">lang = #{lang},</if>
            <if test="sorted != null">sorted = #{sorted},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTActivityInfoById" parameterType="Long">
        delete from t_activity_info where id = #{id}
    </delete>

    <delete id="deleteTActivityInfoByIds" parameterType="String">
        delete from t_activity_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>